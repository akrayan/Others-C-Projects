int my_strlen(char *str)
{
  int i;

  i = 0;
  while (str[i] != '\0'ðŸ˜‰
    {
      i = i + 1;
    }
    return (i);
    }

  int my_swapp(char *a, char *b)
  {
    char count;

    count = *a;
    *a = *b;
    *b = count;
  }

  char *my_revstr(char *str)
  {
    int x;
    int y;

    x = my_strlen(str) - 1;
    y = 0;
    while (x > y)
      {
	my_swapp(&str[x], &str[y]);
	x = x - 1;
	y = y + 1;
      }
    return (str);
  }
}
